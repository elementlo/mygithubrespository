<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.degao.map.activity.PoiSearchActivity">
    <include layout="@layout/poi_search_bar"
             android:id="@+id/include"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_submit">
        <ListView
                android:id="@+id/lv_userpoi"
                android:layout_marginTop="100dp"
                android:paddingBottom="10dp"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <ListView
                android:id="@+id/listview_poi_search_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:divider="@null"
                android:layout_marginTop="100dp"
                android:layout_above="@+id/ll_submit"
                android:visibility="invisible"/>
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/ll_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_hei"
            android:layout_alignParentBottom="true"
            android:background="@color/submit_bg">
        <Button
                android:id="@+id/btn_submit_place"
                android:layout_width="@dimen/btn_wid_50"
                android:layout_height="@dimen/btn_hei_30"
                android:background="@drawable/icon_btn_submit_bg"
                android:text="提交"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:onClick="onClick"
                />
    </RelativeLayout>
</RelativeLayout>
