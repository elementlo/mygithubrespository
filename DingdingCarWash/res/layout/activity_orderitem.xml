<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <net.wash8.customview.CustomTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customTitle"></net.wash8.customview.CustomTitle>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/pb_orderitem"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="invisible"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_carimage"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/photo_myorder_item"/>
        <TextView
                android:id="@+id/tv_carnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:layout_margin="15dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_alignBottom="@+id/iv_carimage"
                />
</RelativeLayout>
            <LinearLayout
                    android:id="@+id/ll_before"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                <TextView
                        android:id="@+id/tv_qingxiqian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="1"
                        android:text="清洗前"
                        android:textColor="@color/sliver_gray"/>

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_before0"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_before1"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_before2"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_before3"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_after"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                <TextView
                        android:id="@+id/tv_qingxihou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="1"
                        android:text="清洗后"
                        android:textColor="#70CDE5"/>

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_after0"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_after1"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_after2"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />

                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_after3"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/photo_carlist"
                        android:onClick="onClick"
                        />
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                <TextView
                        android:id="@+id/tv_xiangmu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目"
                        android:textColor="@color/sliver_gray"/>
                <TextView
                        android:id="@+id/tv_washprogram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="text"
                        android:layout_toRightOf="@+id/tv_xiangmu"
                        android:layout_marginLeft="20dp"/>
                <TextView
                        android:id="@+id/tv_jiage"
                        android:layout_below="@+id/tv_xiangmu"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="@color/sliver_gray"/>
                <TextView
                        android:id="@+id/tv_price"
                        android:layout_alignBottom="@+id/tv_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="text"
                        android:layout_toRightOf="@+id/tv_xiangmu"
                        android:layout_marginLeft="20dp"/>
                <TextView
                        android:id="@+id/tv_shijian"
                        android:layout_below="@+id/tv_jiage"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间"
                        android:textColor="@color/sliver_gray"/>
                <TextView
                        android:id="@+id/tv_date"
                        android:layout_alignBottom="@+id/tv_shijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="text"
                        android:layout_toRightOf="@+id/tv_xiangmu"
                        android:layout_marginLeft="20dp"/>
                <TextView
                        android:id="@+id/tv_pingjia"
                        android:layout_below="@+id/tv_shijian"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价"
                        android:textColor="@color/sliver_gray"/>
                <RatingBar
                        android:id="@+id/rating_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/customRatingBar"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_pingjia"
                        android:layout_alignBottom="@+id/tv_pingjia"
                        android:isIndicator="false"
                        android:stepSize="1.0"/>
                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rating_rate"
                            android:layout_marginTop="15dp">
                            <EditText
                                    android:id="@+id/et_advice"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:lines="8"
                                    android:textSize="16sp"
                                    android:gravity="left|top"
                                    android:hint="请填写您对服务的评价或建议..."/>
                            <TextView
                                    android:id="@+id/tv_advice"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:textSize="16sp"
                                    />
                    </FrameLayout>

            </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/rl_submitbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                                android:id="@+id/ll_submit"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:layout_alignParentBottom="true"
                                android:background="@color/submit_bg">

                                <Button
                                        android:id="@+id/btn_submit_evaluation"
                                        android:layout_width="@dimen/btn_wid_50"
                                        android:layout_height="@dimen/btn_hei_30"
                                        android:background="@drawable/icon_btn_submit_bg"
                                        android:text="提交"
                                        android:textColor="#ffffff"
                                        android:onClick="onClick"
                                        />
                        </LinearLayout>
                </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
</LinearLayout>