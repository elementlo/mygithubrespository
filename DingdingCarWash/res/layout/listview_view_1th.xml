<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:paddingLeft="20dp"
              android:minHeight="?android:attr/listPreferredItemHeight"
		>

	<ImageView
			android:id="@+id/iv_lefticon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			>

		<TextView
				android:id="@+id/iv_itemtitle"
				android:layout_width="wrap_content"
				android:layout_height="22dp"
				android:layout_marginBottom="10dp"
				android:text="text"
		        android:textSize="17sp"
				/>

		<TextView
				android:id="@+id/iv_itemdetail"
				android:layout_width="wrap_content"
				android:layout_below="@id/iv_itemtitle"
				android:layout_height="20dp"
				android:text="text"
				/>
		<TextView
				android:id="@+id/tv_unread"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/icon_unread_count"
				android:layout_toLeftOf="@+id/iv_rightarrow"
				android:layout_marginRight="10dp"
		        android:text="12"
		        android:textColor="#ffffff"
		        android:layout_centerInParent="true"
		        android:visibility="invisible"
		        android:gravity="center"
				/>

		<ImageView
				android:id="@+id/iv_rightarrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/right_icon"
				android:layout_alignParentRight="true"
				android:paddingRight="20dp"
				android:layout_centerInParent="true"
				/>
	</RelativeLayout>

</LinearLayout>