<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <net.wash8.customview.CustomTitle
            android:id="@+id/customTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

        <ImageView
                android:id="@+id/iv_ceshitupian"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/pic_serviceitem"
                />

        <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_ceshitupian">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_yongshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用时"
                        android:textSize="16sp"
                        />

                <TextView
                        android:id="@+id/tv_timecost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_yongshi"
                        android:textSize="16sp"
                        android:text="text"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <TextView
                        android:id="@+id/tv_renyuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人员"
                        android:textSize="16sp"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_yongshi"
                        android:textSize="16sp"
                        android:text="2人"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <TextView
                        android:id="@+id/tv_zhengjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正价"
                        android:textSize="16sp"
                        />

                <TextView
                        android:id="@+id/tv_OriginalFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_yongshi"

                        android:text="text"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <TextView
                        android:id="@+id/tv_youhui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠"
                        android:textSize="16sp"
                        />

                <TextView
                        android:id="@+id/tv_CurrentFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_yongshi"
                        android:text="text"/>
            </LinearLayout>

        </LinearLayout>
        <Button
                android:id="@+id/btn_selectservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/iv_ceshitupian"
                android:background="@drawable/background_btn"
                android:text="选 择"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:onClick="onClick"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center">
        <TextView
                android:id="@+id/tv_fuwujieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务介绍"
                android:textSize="20sp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dividing_line"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_fuwujieshao"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/tv_title_serviceintroduct"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="text"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_serviceintroduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="text"
                    android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>